<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:textColor="@color/white"
        android:background="#7A7573"
        android:textSize="70dp"
        android:text="0" />

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
        <Button
            android:id="@+id/btnAC"
            android:backgroundTint="#b2b2b2"
            android:textColor="@color/black"
            android:text="AC" />
        <Button
            android:id="@+id/btnPlusMinus"
            android:onClick="btnOnClick"
            android:backgroundTint="#b2b2b2"
            android:textColor="@color/black"
            android:text="+/-" />

        <Button
            android:id="@+id/btnPercentage"
            android:onClick="btnOnClick"
            android:backgroundTint="#b2b2b2"
            android:textColor="@color/black"
            android:text="%" />

        <Button
            android:id="@+id/btnDivide"
            android:onClick="btnOnClickAction"
            android:layout_weight="1"
            android:backgroundTint="#ffa500"
            android:textColor="@color/black"
            android:text="/" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
        <Button
            android:id="@+id/btn7"
            android:onClick="btnOnClick"
            android:backgroundTint="#b2b2b2"
            android:textColor="@color/black"
            android:text="7" />
        <Button
            android:id="@+id/btn8"
            android:onClick="btnOnClick"
            android:backgroundTint="#b2b2b2"
            android:textColor="@color/black"
            android:text="8" />
        <Button
            android:id="@+id/btn9"
            android:onClick="btnOnClick"
            android:backgroundTint="#b2b2b2"
            android:textColor="@color/black"
            android:text="9" />
        <Button
            android:id="@+id/btnMultiply"
            android:onClick="btnOnClickAction"
            android:layout_weight="1"
            android:backgroundTint="#ffa500"
            android:textColor="@color/black"
            android:text="*" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
        <Button
            android:id="@+id/btn4"
            android:onClick="btnOnClick"
            android:backgroundTint="#b2b2b2"
            android:textColor="@color/black"
            android:text="4" />
        <Button
            android:id="@+id/btn5"
            android:onClick="btnOnClick"
            android:backgroundTint="#b2b2b2"
            android:textColor="@color/black"
            android:text="5" />
        <Button
            android:id="@+id/btn6"
            android:onClick="btnOnClick"
            android:backgroundTint="#b2b2b2"
            android:textColor="@color/black"
            android:text="6" />
        <Button
            android:id="@+id/btnMinus"
            android:onClick="btnOnClickAction"
            android:layout_weight="1"
            android:backgroundTint="#ffa500"
            android:textColor="@color/black"
            android:text="-" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
        <Button
            android:id="@+id/btn1"
            android:onClick="btnOnClick"
            android:backgroundTint="#b2b2b2"
            android:textColor="@color/black"
            android:text="1" />
        <Button
            android:id="@+id/btn2"
            android:onClick="btnOnClick"
            android:backgroundTint="#b2b2b2"
            android:textColor="@color/black"
            android:text="2" />
        <Button
            android:id="@+id/btn3"
            android:onClick="btnOnClick"
            android:backgroundTint="#b2b2b2"
            android:textColor="@color/black"
            android:text="3" />
        <Button
            android:id="@+id/btnPlus"
            android:onClick="btnOnClickAction"
            android:layout_weight="1"
            android:backgroundTint="#ffa500"
            android:textColor="@color/black"
            android:text="+" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
        <Button
            android:id="@+id/btn0"
            android:onClick="btnOnClick"
            android:layout_span="2"
            android:backgroundTint="#b2b2b2"
            android:textColor="@color/black"
            android:text="0" />
        <Button
            android:id="@+id/btnDot"
            android:onClick="btnOnClick"
            android:backgroundTint="#b2b2b2"
            android:textColor="@color/black"
            android:text="." />
        <Button
            android:id="@+id/btnEqual"
            android:layout_weight="1"
            android:backgroundTint="#ffa500"
            android:textColor="@color/black"
            android:text="=" />
    </TableRow>

</TableLayout>